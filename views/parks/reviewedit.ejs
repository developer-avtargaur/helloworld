
<% if(locals.isLoggedIn) {%>
  <div class='card-panel blue lighten-5' id='submit'>

<h3>Edit your review of <%=park.parkname%></h3>
<div class=row>
<form class="col s12" method='POST' action='/parks/<%=park._id %>/reviews/<%=review._id %>'>
 <input type='hidden' name='_method' value='PUT'>
 <div class="input-field col l12">
<input type='text' name="title" value='<%=review.title%>' id='title_field' required></input>
 <label for="title_field">Title</label>
 </div>
  <div class="input-field col l12">
 <input type='number' name="rating" value='<%=review.rating%>' id='rating_field' min="1" max="5" required></input>
   <label for="rating_field">Rating</label>
 </div>
  <div class="input-field col l12">
<textarea type='text' name="content" class="materialize-textarea" id='review_field' required><%=review.content%></textarea>
   <label for="review_field">Review</label>
   </div>


<div class = 'row'>
<br />
<div class = 'col s12'>
<div class = 'col s6 left-align'>


<button class= "waves-effect waves-light green btn">Submit Review</button>
</form>


</div>

<div class = 'col s6 right-align'>

<form method='POST' action='/parks/<%=park._id %>/reviews/<%=review._id%>'>
<input type='hidden' name='_method' value='DELETE'>
<button class="waves-effect waves-light red btn">Delete Review</button>
</form>
</div>
</div>
</div>
</div>
</div>
<%} %>
