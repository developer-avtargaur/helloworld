<div class="container">

    <img class="responsive-img" src="<%= park.photo %>">

  <h3 class= 'col l10'><%= park.parkname %></h3>



  <% park.reviews.forEach((review) => { %>
 <div class='divider'></div>
<div class='row'>
<div class= 'col s12'>
<div class= 'col s9'>
    <h5><%= review.title %></h5>
    <p>by <% if(review.user) {%>
    <%=review.user.username %>
    <% } else {%>
        <%=review.reviewer%>
        <%}%> on <%=review.time%></p>
  <h6><%= review.content %></h6>
  </div>
  <div class= 'col s2'>
  <br />
    <% if((locals.isLoggedIn) && ((locals.user.id === (review.user && review.user.id))  ||  (locals.user.username === review.reviewer))) {%>
      <a href='/parks/<%= park._id%>/reviews/<%= review._id %>/reviewedit'><button class ="waves-effect waves-light green btn">Edit</button></a>
      <%}%>
      </div>
</div>
</div>
 <div class='divider'></div>
<% }) %>
<br />
 <% if(locals.isLoggedIn) {%>

   <div class='card-panel blue lighten-5' id='submit' >
   <h4>Review <%=park.parkname%>!</h4>
<form method="POST" action="/parks/<%= park._id %>/reviews">
  <label for="title_field">title</label>
<input placeholder="Give your review a title" name="title" id='title_field'></input>
<label for="review_field">review</label>
<textarea placeholder="Write your review" name="content" id='review_field'></textarea>

<div style= 'display: none'>
<input placeholder="<%=locals.user.username%>" name="reviewer" value="<%=locals.user.username%>" ></input>
<input type= 'text' name="time" id='reviewdate' value=''></input>
</div>

<button class ="waves-effect waves-light green btn">Submit</button>
</form>
</div>
<%} else {%>

  <p>Want to submit a review of this park? Either <a href ="/login">log in</a> or <a href ="/createaccount">create an account</a>.</p>
    <% } %>
