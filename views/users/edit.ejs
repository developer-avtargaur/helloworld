
  <div class="container">
    <h2>Edit your profile</h2>


    <form method="POST" action="/users/<%= user._id %>">
      <input type="hidden" name="_method" value="PUT">


          <div class="input-field col l12">
            <input type="text" name="username" id="username_field" value='<%=user.username%>'>
            <label for="username_field">Your name</label>
          </div>
          <div class="input-field col l12">
            <input type="email" name="email" id="email_field" value='<%=user.email%>'>
            <label for="email_field">Email</label>
          </div>
          <div class="input-field col l12">
            <input type="password" name="password" id="password_field">
            <label for="password_field">Password</label>
          </div>
          <div class="input-field col l12">
            <input type="password" name="passwordConfirmation" id="passwordcon_field">
            <label for="passwordcon_field">Enter your password again</label>
          </div>

          <div class="input-field col l12">
            <button class="waves-effect waves-light btn">Edit your account</button>
          </div>
        </form>

        <form method="POST" action="/users/<%= user._id %>">
          <input type="hidden" name="_method" value="DELETE">
          <%console.log(user._id)%>
          <button class=""waves-effect waves-light red btn"">Or click here to delete your account</button>
        </form>

</div>
