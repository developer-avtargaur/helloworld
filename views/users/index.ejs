<h3>Create an account</h3>
<form class="col l12" action="/createaccount" method="post">
    <div class="input-field col l12">
      <input type="text" name="username" id="username_field" required >
      <label for="username_field">Your name</label>
    </div>
    <div class="input-field col l12">
      <input type="email" name="email" id="email_field" required>
      <label for="email_field">Email</label>
    </div>
    <div class="input-field col l12">
      <input type="password" name="password" id="password_field" required>
      <label for="password_field">Password</label>
    </div>
    <div class="input-field col l12">
      <input type="password" name="passwordConfirmation" id="passwordcon_field" required>
      <label for="passwordcon_field">Enter your password again</label>
    </div>

    <div class="input-field col l12">
      <button class="waves-effect waves-light green btn">Create an account</button>
    </div>
  </form>
